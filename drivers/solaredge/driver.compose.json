{
  "name": {
    "en": "SolarEdge",
    "nl": "SolarEdge"
  },
  "pair": [
    {
      "id": "pair"
    },
    {
      "id": "list_devices",
      "template": "list_devices",
      "navigation": {
        "next": "add_devices"
      }
    },
    {
      "id": "add_devices",
      "template": "add_devices"
    }
  ],
  "images": {
    "large": "{{driverAssetsPath}}/images/large.jpg",
    "small": "{{driverAssetsPath}}/images/small.jpg"
  },
  "connectivity": ["cloud"],
  "platforms": ["local"],
  "class": "solarpanel",
  "capabilities": ["measure_power", "meter_power", "measure_temperature"],
  "capabilitiesOptions": {
    "measure_temperature": {
      "title": {
        "en": "Inverter temperature",
        "nl": "Temperatuur omvormer"
      }
    }
  },
  "settings": [
    {
      "id": "key",
      "type": "password",
      "label": {
        "en": "SolarEdge (read-only) API key"
      }
    },
    {
      "id": "interval",
      "type": "number",
      "label": { "en": "Check interval", "nl": "Controle-interval" },
      "hint": {
        "en": "Increase this value if you are using other apps that use the SolarEdge API. A value lower than 15 is not recommended as it might cause the app to hit SolarEdge rate limits.",
        "nl": "Verhoog deze waarde als je andere apps gebruikt die de SolarEdge API gebruiken. Een waarde lager dan 15 wordt niet aangeraden omdat de app tegen de door SolarEdge gestelde limieten aan kan lopen."
      },
      "value": 15,
      "min": 10,
      "units": { "en": "minutes", "nl": "minuten" }
    },
    {
      "id": "checkTemperature",
      "type": "checkbox",
      "label": {
        "en": "Fetch inverter temperature",
        "nl": "Haal temperatuur omvormer op"
      },
      "value": true
    }
  ]
}
